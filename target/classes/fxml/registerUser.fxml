<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="281.0" prefWidth="393.0" stylesheets="/styles/my.css" xmlns="http://javafx.com/javafx/8.0.151"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controllers.RegisterUserController">

    <children>

        <TextField fx:id="loginField" layoutX="112.0" layoutY="23.0" prefHeight="25.0" prefWidth="174.0"
                   promptText="login"/>
        <PasswordField fx:id="passwordField" layoutX="112.0" layoutY="58.0" prefHeight="25.0" prefWidth="174.0"
                       promptText="password"/>
        <TextField fx:id="firstNameField" layoutX="112.0" layoutY="93.0" prefHeight="25.0" prefWidth="174.0"
                   promptText="Firs Name"/>
        <TextField fx:id="lastNameField" layoutX="112.0" layoutY="128.0" prefHeight="25.0" prefWidth="174.0"
                   promptText="Last Name"/>
        <TextField fx:id="telephoneField" layoutX="112.0" layoutY="163.0" prefHeight="25.0" prefWidth="174.0"
                   promptText="telephone"/>
        <TextField fx:id="dateField" layoutX="112.0" layoutY="198.0" prefHeight="25.0" prefWidth="174.0"
                   promptText="date in format yyyy-MM-dd"/>

        <Button fx:id="saveUserButton" cancelButton="true" defaultButton="true" layoutX="179.0" layoutY="249.0"
                mnemonicParsing="false" onAction="#addUserToDb" styleClass="button" text="Save"/>

        <Label fx:id="loginLabel" layoutX="291.0" layoutY="27.0" text="."/>
        <Label fx:id="passwordLabel" layoutX="291.0" layoutY="62.0" text="."/>
        <Label fx:id="firsNameLabel" layoutX="293.0" layoutY="97.0" text="."/>
        <Label fx:id="lastNameLabel" layoutX="293.0" layoutY="132.0" text="."/>
        <Label fx:id="telLabel" layoutX="293.0" layoutY="167.0" text="."/>
        <Label fx:id="dateLabel" layoutX="293.0" layoutY="202.0" text="."/>

        <Label id="confirmField" fx:id="addingConfirmLabel" layoutX="20.0" layoutY="226.0" prefHeight="20.0"
               prefWidth="360.0"/>


    </children>

</AnchorPane>
