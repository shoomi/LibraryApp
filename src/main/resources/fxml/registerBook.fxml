<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="226.0" prefWidth="450.0" stylesheets="/styles/my.css" xmlns="http://javafx.com/javafx/8.0.151"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controllers.RegisterBookController">

    <children>

        <TextField fx:id="titleField" layoutX="98.0" layoutY="25.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="book's title"/>
        <TextField fx:id="authorField" layoutX="97.0" layoutY="63.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="book's author"/>
        <TextField fx:id="yearBookField" layoutX="96.0" layoutY="101.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="release year (YYYY)"/>
        <TextField fx:id="numberOfBooksField" layoutX="96.0" layoutY="139.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="amount"/>

        <Button fx:id="saveBookButton" cancelButton="true" defaultButton="true" layoutX="207.0" layoutY="188.0"
                mnemonicParsing="false" onAction="#addBookToDb" styleClass="button" text="Save"/>

        <Label fx:id="titleLabel" layoutX="369.0" layoutY="30.0" prefHeight="17.0" prefWidth="82.0" text="."/>
        <Label fx:id="authorLabel" layoutX="368.0" layoutY="67.0" prefHeight="17.0" prefWidth="82.0" text="."/>
        <Label fx:id="numberOfBooksLabel" layoutX="367.0" layoutY="143.0" prefHeight="17.0" prefWidth="82.0" text="."/>
        <Label fx:id="yearBookLabel" layoutX="368.0" layoutY="105.0" prefHeight="17.0" prefWidth="82.0" text="."/>
        <Label id="confirmField" fx:id="addingBookConfirmLabel" layoutX="23.0" layoutY="168.0" prefHeight="17.0"
               prefWidth="410.0"/>

    </children>

</AnchorPane>
