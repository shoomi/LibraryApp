<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="270.0" prefWidth="427.0" xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddBookController">

    <children>
        <TextField fx:id="titleField" layoutX="43.0" layoutY="28.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="book's title"/>
        <TextField fx:id="authorField" layoutX="42.0" layoutY="69.0" prefHeight="25.0" prefWidth="264.0"
                   promptText="book's author"/>
        <Button fx:id="saveBookButton" cancelButton="true" defaultButton="true" layoutX="153.0" layoutY="222.0"
                mnemonicParsing="false" onAction="#addBookToDb" styleClass="button" text="Save"/>
        <TextField fx:id="yearBookField" layoutX="92.0" layoutY="111.0" prefHeight="25.0" prefWidth="157.0"
                   promptText="release year (YYYY)"/>
        <TextField fx:id="numberOfBooksField" layoutX="91.0" layoutY="152.0" prefHeight="25.0" prefWidth="157.0"
                   promptText="amount"/>
        <Label fx:id="titleLabel" layoutX="316.0" layoutY="32.0" text="." textFill="#a81717"/>
        <Label fx:id="authorLabel" layoutX="316.0" layoutY="73.0" text="," textFill="#971111"/>
        <Label fx:id="numberOfBooksLabel" layoutX="253.0" layoutY="156.0" prefHeight="17.0" prefWidth="140.0" text="."
               textAlignment="CENTER" textFill="#a11818"/>
        <Label fx:id="yearBookLabel" layoutX="260.0" layoutY="115.0" prefHeight="17.0" prefWidth="165.0" text="."
               textAlignment="CENTER" textFill="#971515"/>
        <Label fx:id="addingBookConfirmLabel" layoutX="4.0" layoutY="193.0" prefHeight="17.0" prefWidth="384.0"
               textAlignment="CENTER" textFill="#e15f0e"/>
    </children>

</AnchorPane>
